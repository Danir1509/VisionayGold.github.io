<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>@ViewData["Title"] - Visionary Gold</title>
    <link rel="icon" type="image/png" href="~/Imagenes/Inicio/logo gold.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/Inicio.css" />
    <link rel="stylesheet" href="~/css/Cartas.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Anton&family=DynaPuff:wght@400..700&family=Sixtyfour+Convergence&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Anton&family=Arvo:ital,wght@0,400;0,700;1,400;1,700&family=DynaPuff:wght@400..700&family=Itim&family=Sixtyfour+Convergence&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-toggleable-sm box-shadow mb-3 fixed-top">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/Imagenes/Inicio/logo.png" alt="Logo" class="imageninicio" /><b class="barraletras"></b></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span><p style="color: black; "><b style="color: #695604;">Menú</b></p>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><b class="barraletras">Inicio</b></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy"><b class="barraletras">Privacy</b></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Catalog" asp-action="Index"><b class="barraletras">Catálogo</b></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Info" asp-action="Index"><b class="barraletras">Información</b></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Contact" asp-action="Index"><b class="barraletras">Contactos</b></a>
                        </li>
                    </ul>

                    <ul class="navbar-nav ">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Cart" asp-action="Index">
                                <i class="fas fa-shopping-cart"></i> <b class="barraletras">Carrito</b>
</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">
                                <i class="fas fa-sign-in-alt"></i> <b class="barraletras">Sesión</b>
</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">
                                <i class="fas fa-user-plus"></i> <b class="barraletras">Registro</b>
</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="containerdos my-0">
            <div class="containerdos p-4">
                <div class="row my-4 justify-content-center">
                    <div class="col-lg-3 col-md-6 mb-4 mb-md-0 text-center">
                        <p class="text-footer2">VISIONARY GOLD</p>
                        <div class="rounded-circle shadow-1-strong d-flex align-items-center justify-content-center mb-4 mx-auto" style="width: 150px; height: 150px;">
                            <img src="~/Imagenes/Inicio/dorado.png" height="125" alt="" loading="lazy" />
                        </div>
                        <p class="text-footer"><i class="fas fa-map-marker-alt pe-2"></i> San Sebastian San Vicente Calle Francisco Miranda Barrio El Transito Frente a Cafe Don Pablo</p>
                        <div class="mt-4">
                            <p class="text-footer2">REDES SOCIALES</p>
                            <a target="_blank" href="https://www.facebook.com/profile.php?id=61553572762772" class="btn btn-floating btn-lg"><i class="fab fa-facebook-f" style="color: #786207;"></i></a>
                            <a target="_blank" href="https://www.instagram.com/visionarygold_sv/" class="btn btn-floating btn-lg"><i class="fab fa-instagram" style="color: #786207;"></i></a>
                            <a target="_blank" href="https://acortar.link/IBQnzd" class="btn btn-floating btn-lg"><i class="fab fa-tiktok" style="color: #786207;"></i></a>
                            <a target="_blank" href="https://api.whatsapp.com/send?phone=%2B50369272883" class="btn btn-floating btn-lg"><i class="fab fa-whatsapp" style="color: #786207;"></i></a>
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-6 mb-4 mb-md-0 text-center">
                        <h5 class="text-footer2 text-uppercase mb-4">Navegacion</h5>
                        <ul class="list-unstyled">
                            <li class="mb-2"><a href="#!" class="text-footer3"><i class="fas fa-home"></i> Inicio</a></li>
                            <li class="mb-2"><a href="#!" class="text-footer3"><i class="fas fa-user-shield"></i> Privacidad</a></li>
                            <li class="mb-2"><a href="#!" class="text-footer3"><i class="fas fa-shopping-basket"></i> Catálogo</a></li>
                            <li class="mb-2"><a href="#!" class="text-footer3"><i class="fas fa-info-circle"></i> Información</a></li>
                            <li class="mb-2"><a href="#!" class="text-footer3"><i class="fas fa-address-book"></i> Contactos</a></li>
                        </ul>
                        <h5 class="text-footer2 text-uppercase mb-4">Política y Privacidad</h5>
                        <ul class="list-unstyled">
                            <li class="mb-2"><a href="#!" class="text-footer3"><i class="fas fa-file-alt"></i> Política de Privacidad</a></li>
                            <li class="mb-2"><a href="#!" class="text-footer3"><i class="fas fa-truck"></i> Condiciones de Envío</a></li>
                            <li class="mb-2"><a href="#!" class="text-footer3"><i class="fas fa-undo"></i> Devoluciones y Reembolso</a></li>
                            <li class="mb-2"><a href="#!" class="text-footer3"><i class="fas fa-question-circle"></i> Preguntas Frecuentes</a></li>
                        </ul>
                    </div>

                    <div class="col-lg-3 col-md-6 mb-4 mb-md-0 text-center">
                        <h5 class="text-footer2 text-uppercase mb-4">Contactos</h5>
                        <ul class="list-unstyled">
                            <li><p class="text-footer4"><i class="fas fa-phone pe-2"></i> +503 69272883</p></li>
                            <li><p class="text-footer4"><i class="fas fa-envelope pe-2 mb-0"></i> visionary.golden@gmail.com</p></li>
                        </ul>

                        <h5 class="text-footer2 text-uppercase mb-4">Horarios de Atencion</h5>
                        <table class="text-footer4 table text-center">
                            <tbody class="fw-normal">
                                <tr><td>Lunes - Viernes:</td><td>9:00 am - 6:00 pm</td></tr>
                                <tr><td>Sabado - Domingo:</td><td>Cerrado</td></tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="text-center p-3" style="background-color: #b2951b">
                © 2020 Copyright: <a class="text-white" href="">Visionary Gold</a>
            </div>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/Card.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
